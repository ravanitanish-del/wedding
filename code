<script>
/* SCROLL ANIMATION */
const sections=document.querySelectorAll("section");
const obs=new IntersectionObserver(e=>{
  e.forEach(x=>{
    if(x.isIntersecting)x.target.classList.add("show");
  });
},{threshold:.15});
sections.forEach(s=>obs.observe(s));
</script>

